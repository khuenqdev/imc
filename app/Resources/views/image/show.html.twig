{% extends 'base.html.twig' %}

{% block body %}
    <h1>Image</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ image.id }}</td>
            </tr>
            <tr>
                <th>Src</th>
                <td>{{ image.src }}</td>
            </tr>
            <tr>
                <th>Alt</th>
                <td>{{ image.alt }}</td>
            </tr>
            <tr>
                <th>Filename</th>
                <td>{{ image.filename }}</td>
            </tr>
            <tr>
                <th>Path</th>
                <td>{{ image.path }}</td>
            </tr>
            <tr>
                <th>Width</th>
                <td>{{ image.width }}</td>
            </tr>
            <tr>
                <th>Height</th>
                <td>{{ image.height }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ image.type }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ image.author }}</td>
            </tr>
            <tr>
                <th>Copyright</th>
                <td>{{ image.copyright }}</td>
            </tr>
            <tr>
                <th>Isexiflocation</th>
                <td>{% if image.isExifLocation %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Datetaken</th>
                <td>{% if image.dateTaken %}{{ image.dateTaken|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Dateacquired</th>
                <td>{% if image.dateAcquired %}{{ image.dateAcquired|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Latitude</th>
                <td>{{ image.latitude }}</td>
            </tr>
            <tr>
                <th>Longitude</th>
                <td>{{ image.longitude }}</td>
            </tr>
            <tr>
                <th>Altitude</th>
                <td>{{ image.altitude }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ image.address }}</td>
            </tr>
            {#<tr>
                <th>Metadata</th>
                <td>{{ image.metadata }}</td>
            </tr>#}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('gallery_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('gallery_edit', { 'id': image.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
