{% extends '@Gui/base.html.twig' %}
{% set active_menu = 'stats' %}
{% block title %}Address Statistics{% endblock %}

{% block content %}
    <div class="row">
        <div class="col s12">
            <h5>Address Statistics</h5>
            <div>
                <b>Total: </b> {{ no_of_address_images }}
            </div>
            <p><small><i>* Only images whose location coordinates in metadata</i></small></p>
            <table class="table responsive-table highlight striped">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Address</th>
                    <th>Images</th>
                </tr>
                </thead>
                <tbody>
                {% for data in address_images %}
                    <tr>
                        <td>{{ loop.index }}</td>
                        <td>{{ data.address }}</td>
                        <td>{{ data.no_of_images }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

{% block footer %}
{% endblock %}